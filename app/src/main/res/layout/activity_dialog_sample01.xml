<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogsample.DialogSample01Activity">

    <include
        android:id="@+id/include_title"
        layout="@layout/titlebar_main"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sample1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/btn_recycler_sample1"
        tools:text="@string/custom_dialog"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sample2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:background="@drawable/btn_recycler_sample1"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_sample1"
        app:layout_constraintTop_toTopOf="@+id/btn_sample1"
        tools:text="@string/custom_dialog" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sample3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/btn_recycler_sample1"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sample4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sample1"
        tools:text="@string/custom_dialog" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sample4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:background="@drawable/btn_recycler_sample1"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_sample3"
        app:layout_constraintTop_toTopOf="@+id/btn_sample3"
        tools:text="@string/custom_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>